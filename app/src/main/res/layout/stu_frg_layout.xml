<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout android:id="@+id/llayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/dao_back_color"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="25dp"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:src="@drawable/selector"
            android:layout_height="wrap_content" />

        <TextView
            android:text="学习汇"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/white_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:text="请选择科目"
        android:textSize="20sp"
        android:background="#e9faff"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:checked="true"
            android:text="语文"/>
        <RadioButton android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"

            android:text="数学"/>
        <RadioButton android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="英语"/>
    </RadioGroup>

    <TextView android:id="@+id/xxZsdTxt"
        android:text=""
        android:gravity="center"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView android:id="@+id/zsdlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
